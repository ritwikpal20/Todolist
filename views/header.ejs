    <link rel="stylesheet" href="/bootstrap-social.css">
</head>

<body>
    <style>
        .dropdown-menu{
            left: -100px;
        }
    </style>
    <% if(isAuthenticated){ %>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home">
                    <h1>Todos</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-start" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" aria-current="page" href="/home">Home</a>
                        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#exampleModal">Create List</a>
                    </div>
                    <div class="navbar-nav ms-auto me-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <%= user %> 
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="/auth/signout">Logout</a></li>
                            </ul>
                        </li>
                    </div>
                </div>
            </div>
        </nav>
    <% }else{ %>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <h1>Todos</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-start" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto me-3">
                        <a class="nav-link" href="/auth/signin">Sign In</a>
                        <a class="nav-link" href="/auth/signup">Sign Up</a>
                    </div>
                </div>
            </div>
        </nav>
    <% } %> 
    <div class="container">