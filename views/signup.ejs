<%- include('header') %>
    <link rel="stylesheet" href="/home.css">
    <style>
        * {
            text-align: left;
        }
        a {
            text-decoration: none;
        }
        .signup-container{
            padding: 2rem;
            background-color: lightcoral;
            width: 70%;
        }
        .form-input{
            margin: 1rem;
        }
        .form-input input{
            width: 95%;
        }
        small{
            color: black;
        }
        .input-error{
            color: rgb(255, 0, 0);
        }
        @media (max-width: 500px){
            .signup-container{
                margin: auto;
            }
        }
    </style>
    <h1 id="welcome-msg">
        Sign Up
    </h1>
    <div class="signup-container">
        <form action="/auth/signup" method="post">
            <div class="form-input">
                <label for="name">Your Name : </label>
                <input type="text" name="name" id="name" value="<%= errorsAndPreviousValues.nameValue %>">
            </div>
            <div class="form-input">
                <label for="username">Username : </label>
                <input type="text" name="username" id="username" value="<%= errorsAndPreviousValues.usernameValue %> " required>
                <!-- Sometimes usernameError or passwordError may be undefined , but there is no problem in it , until you try to access it as usernameError[0].Undefined elements will simply not be rendered , which is what we want. -->
                <small class="input-error"><%= errorsAndPreviousValues.usernameError %> </small>
            </div>
            <div class="form-input">
                <label for="email">Email : </label>
                <input type="text" name="email" id="email" value="<%= errorsAndPreviousValues.emailValue %> ">
            </div>
            <div class="form-input">
                <label for="password">Password : </label>
                <input type="password" name="password" id="password" required>
                <small class="input-error">
                    <%= errorsAndPreviousValues.passwordError %>
                </small>
            </div>
            <div class="form-input">
                <label for="password-confirm">Confirm Password : </label>
                <input type="password" name="passwordConfirm" id="password-confirm" required>
                <small class="input-error">
                    <%= errorsAndPreviousValues.passwordConfirmError %>
                </small>
            </div>
            <button class="btn btn-danger">Sign Up</button>
        </form>
    </div>
    <small>Already have an account? <a href="/auth/signin">Sign In</a></small>

    <br><br>
    <%- include('footer') %>